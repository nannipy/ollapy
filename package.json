{
  "name": "ollapy",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.yourcompany.ollapy",
    "productName": "Ollapy",
    "mac": {
      "icon": "ollapy.icns",
      "category": "public.app-category.utilities"
    },
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "dist/server",
        "to": "server",
        "filter": ["**/*"]
      }
    ],
    "asarUnpack": [
      "**/*.app",
      "**/*.exe",
      "**/*.dll",
      "**/*.node",
      "**/*.so",
      "**/*.dylib",
      "**/server"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12"
  }
}
